<%= form_for @semester, :html => { :class => 'form-horizontal' } do |f| %>  

  <% @semester.errors.full_messages.each do |msg| %>
    <div class="alert">
      <%= msg %>  
    </div>            
  <% end %>             

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :start_dt, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :start_dt, :class => 'datetime_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :end_dt, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :end_dt, :class => 'datetime_select' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
      semesters_path, :class => 'btn' %>
    </div>
  <% end %>
