<%- model_class = Event -%>
<div class="page-header">
  <h1>Event List</h1>
</div>
<% if @events.count > 0 %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:name) %></th>
        <th>Points</th>
        <th>Start Datetime</th>
        <th>End Datetime</th>
        <th>Event Type</th>
        <th>Semester</th>
        <% if can? :edit, Event %>
          <th><%=t '.actions', :default => t("helpers.actions") %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= link_to event.name, event_path(event) %></td>
          <td><%= event.default_points %></td>
          <td><%= event.start_dt %></td>
          <td><%= event.end_dt %></td>
          <td><%= EventType.find(event.event_type_id).name %></td>
          <td><%= Semester.find(event.semester_id).name %></td>
          <% if can? :manage, Event %>
            <td>
              <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_event_path(event), :class => 'btn btn-mini' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")), event_path(event), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger' %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h4>There are currently no scheduled events</h4>
  <br />
<% end %>

<% if can? :manage, Event %>
  <%= link_to t('.new', :default => t("helpers.links.new")), new_event_path, :class => 'btn btn-primary' %>
<% end %>
