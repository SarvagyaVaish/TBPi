<%= form_for @event, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :default_points, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :default_points, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :start_dt, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :start_dt, :class => 'datetime_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :end_dt, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :end_dt, :class => 'datetime_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :event_type_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :event_type_id, EventType.all, :id, :name, {}, { :selected => @event.event_type_id } %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :semester_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :semester_id, Semester.all, :id, :name, {}, { :selected => @event.semester_id } %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), events_path, :class => 'btn' %>
  </div>
<% end %>
