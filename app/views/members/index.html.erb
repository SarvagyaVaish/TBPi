<%- model_class = Member -%>
<div class="page-header">
  <h1>Members</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th style="text-align: right;"><%= link_to "First Name", :sort => "first_name" %></th>
      <th><%= link_to "Last Name", :sort => "last_name" %></th>
      <th>Role</th>
    </tr>
  </thead>
  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td style="text-align: right;"><%= link_to "#{member.first_name}", member_path(member) %></td>
        <td><%= link_to "#{member.last_name}", member_path(member) %></td>
        <td><%= Role.find(member.role_id).name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
  new_member_path,
  :class => 'btn btn-primary' %>
