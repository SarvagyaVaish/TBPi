<%- model_class = Member -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>First Name:</strong></dt>
  <dd><%= @member.first_name %></dd>
  <dt><strong>Last Name:</strong></dt>
  <dd><%= @member.last_name %></dd>
  <dt><strong>GTID:</strong></dt>
  <dd><%= @member.gtid %></dd>
  <dt><strong>GT Username:</strong></dt>
  <dd><%= @member.gtusername %></dd>
  <dt><strong>Role:</strong></dt>
  <dd><%= Role.find(@member.role_id).name %></dd>
</dl>

<div class="form-actions">
  <% if can? :index, Member %>
    <%= link_to t('.back', :default => t("helpers.links.back")), members_path, :class => 'btn'  %>
  <% end %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_member_path(@member), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")), member_path(@member), :method => 'delete', :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger' %>
</div>
