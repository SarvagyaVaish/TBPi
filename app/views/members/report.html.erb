<%- model_class = Member -%>

<% if flash[:error] %>
  <%= flash[:error] %>
<% end %>

<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>

<%= form_tag({:controller => 'members', :action => 'report'}, :method => "get") do |f| %>
  <div class="page-header">
    <div class="row-fluid">
      <div class="span4">
        <h1>Attendance Report</h1>
      </div>
      <div class="span3">
        <%= collection_select :semester_id, :semester_id, Semester.all, :id, :name, { :selected => @semester_to_report} %>
      </div>
      <div class="span5">
        <%= submit_tag 'Generate', :class => 'btn' %>
      </div>
    </div>
  </div>
<% end %>

<% if !@semester_to_report.nil? %>
  <div class="row_fluid">
    <div class="span12">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>GTID</th>
            <th>Status</th>
            <% EventType.all.each do |eventType| %>
              <th><%= eventType.name %></th>
            <% end %>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% Member.all.each do |member| %>
            <tr>
              <td><%= link_to "#{member.first_name} #{member.last_name}", member_path(member) %></td>
              <td><%= member.gtid %></td>
              <td><%= member.role_id %></td>
              <% EventType.all.each do |eventType| %>
                <td><%= Attendance.sumOfPoints(member.id, eventType.id, @semester_to_report) %></td>
              <% end %>
              <td>
                <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_member_path(member), :class => 'btn btn-mini' %>
                <%= link_to t('.destroy', :default => t("helpers.links.destroy")), member_path(member), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <%= link_to t('.new', :default => t("helpers.links.new")), new_member_path, :class => 'btn btn-primary' %>

<% end %>

